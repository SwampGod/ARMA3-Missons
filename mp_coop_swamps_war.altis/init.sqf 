// Set Units current Loadout
    Fnc_Set_Loadout =
    {
    _unit = _this select 0;
    _unit setVariable ["Saved_Loadout",getUnitLoadout _unit];
    };

// Get Units current Loadout
    Fnc_Get_Loadout =
    {
    _unit = _this select 0;
    _unit setUnitLoadout (_unit getVariable ["Saved_Loadout",[]]);
    };
